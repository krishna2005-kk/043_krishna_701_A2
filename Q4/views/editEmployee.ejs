<%- include('partials/head') %>
<h2>Edit Employee: <%= emp.empId %></h2>
<form method="POST" action="/employees/<%= emp._id %>?_method=PUT">
  <label>Name <input name="name" value="<%= emp.name %>" required /></label>
  <label>Email <input type="email" name="email" value="<%= emp.email %>" required /></label>
  <fieldset>
    <legend>Salary</legend>
    <label>Basic <input type="number" name="basic" step="0.01" value="<%= emp.salary.basic %>" /></label>
    <label>HRA   <input type="number" name="hra"   step="0.01" value="<%= emp.salary.hra %>" /></label>
    <label>DA    <input type="number" name="da"    step="0.01" value="<%= emp.salary.da %>" /></label>
  </fieldset>
  <button type="submit">Update</button>
</form>
<% if (error) { %><p style="color:red"><%= error %></p><% } %>
<%- include('partials/nav') %>
